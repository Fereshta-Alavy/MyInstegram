<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputEditText
        android:id="@+id/description"
        android:layout_width="match_parent"
        android:layout_height="64dp"
        android:layout_alignParentTop="true"
        android:layout_marginTop="10dp"
        android:background="#2800BFA5"
        android:hint="Description"
        android:textColorHint="#FFFFFF" />

    <ImageView
        android:id="@+id/ivPostImage"
        android:layout_width="395dp"
        android:layout_height="171dp"
        android:layout_below="@+id/description"
        android:layout_marginTop="11dp"
        tools:srcCompat="@tools:sample/avatars[0]" />

    <ImageView
        android:id="@+id/ivHome"
        android:layout_width="90dp"
        android:layout_height="86dp"
        android:layout_below="@+id/ivCaptureImage"
        android:layout_alignParentStart="true"
        android:layout_marginStart="30dp"
        android:layout_marginTop="19dp"
        android:layout_marginBottom="-220dp"
        android:gravity="left"
        android:padding="15dp"
        android:src="@drawable/homeiconblue" />

    <ImageView
        android:id="@+id/ivLogout"
        android:layout_width="104dp"
        android:layout_height="86dp"
        android:layout_below="@+id/ivCaptureImage"
        android:layout_alignEnd="@+id/ivHome"
        android:layout_marginTop="15dp"
        android:layout_marginEnd="-125dp"
        android:layout_marginBottom="-222dp"
        android:gravity="left"
        android:padding="15dp"
        android:src="@drawable/logouticon" />

    <ImageView
        android:id="@+id/ivPost"
        android:layout_width="113dp"
        android:layout_height="65dp"
        android:layout_below="@+id/ivCaptureImage"
        android:layout_alignParentStart="true"
        android:layout_marginStart="258dp"
        android:layout_marginTop="29dp"
        android:gravity="left"
        android:src="@drawable/submiticon" />

    <ImageView
        android:id="@+id/ivCaptureImage"
        android:layout_width="wrap_content"
        android:layout_height="89dp"
        android:layout_below="@+id/ivPostImage"
        android:layout_alignParentStart="true"
        android:layout_marginStart="118dp"
        android:layout_marginTop="83dp"
        android:gravity="left"
        android:src="@drawable/cameraicon" />

</RelativeLayout>